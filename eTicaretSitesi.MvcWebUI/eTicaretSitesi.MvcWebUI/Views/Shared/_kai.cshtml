<div id="kai-bubble-toggle" title="Kai ile sohbet" aria-label="Sohbet panelini aç" role="button" tabindex="0">
    <i class="fas fa-comments"></i>
</div>

<div id="kai-bubble-container" role="region" aria-label="Kai sohbet paneli" style="display:none;">
    <div id="kai-bubble-header">
        <span>🤖 Kai</span>
        <div>
            <a href="/Home/KaiChatPage" id="kai-bubble-fullscreen" title="Tam Ekran Sohbet" aria-label="Tam Ekran Sohbet">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
            <button id="kai-bubble-close" title="Kapat" aria-label="Sohbet panelini kapat">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div id="kai-bubble-body">
        <div id="kai-bubble-messages" aria-live="polite" aria-relevant="additions">
            <div class="kai"><strong>Kai:</strong><br />Merhaba! Size nasıl yardımcı olabilirim? 😊</div>
        </div>
        <div id="kai-bubble-input-container">
            <input type="text" id="kai-bubble-input" placeholder="Bir şey yaz..." aria-label="Mesaj giriş alanı" autocomplete="off" />
            <button id="kai-bubble-send" aria-label="Gönder"><i class="fas fa-paper-plane"></i></button>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("kai-bubble-toggle");
        const chatbot = document.getElementById("kai-bubble-container");
        const closeBtn = document.getElementById("kai-bubble-close");
        const input = document.getElementById("kai-bubble-input");
        const sendBtn = document.getElementById("kai-bubble-send");
        const messages = document.getElementById("kai-bubble-messages");

        let bubbleChatHistory = [
            { role: "assistant", content: "Merhaba! Size nasıl yardımcı olabilirim? 😊" }
        ];

        if (!toggleBtn || !chatbot || !closeBtn || !input || !sendBtn || !messages) return;

        const toggleChat = (show) => {
            chatbot.style.display = show ? "flex" : "none";
            toggleBtn.style.display = show ? "none" : "flex";
            if (show) input.focus();
        };

        toggleBtn.addEventListener("click", () => toggleChat(true));
        closeBtn.addEventListener("click", () => toggleChat(false));

        function appendMessage(sender, htmlContent) {
            const div = document.createElement("div");
            div.className = sender === "Kai" ? "kai" : "user";
            div.innerHTML = `<strong>${sender}:</strong><br/>${htmlContent.replace(/\n/g, '<br/>')}`;
            messages.appendChild(div);
            messages.scrollTop = messages.scrollHeight;
        }

        function showLoading(show) {
            let loading = messages.querySelector('.loading');
            if (show) {
                if (!loading) {
                    loading = document.createElement("div");
                    loading.className = "kai loading";
                    loading.innerHTML = "<strong>Kai:</strong><br/><span></span><span></span><span></span>";
                    messages.appendChild(loading);
                    messages.scrollTop = messages.scrollHeight;
                }
            } else if (loading) {
                loading.remove();
            }
        }

        async function sendMessage() {
            const text = input.value.trim();
            if (!text) return;

            appendMessage("Sen", text);
            input.value = "";
            showLoading(true);

            bubbleChatHistory.push({ role: "user", content: text });
            const apiUrl = "https://localhost:44366/api/kai/getreply"; // API Adresiniz

            try {
                const response = await fetch(apiUrl, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        message: text,
                        history: bubbleChatHistory.slice(0, -1)
                    })
                });

                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);

                const data = await response.json();
                bubbleChatHistory.push({ role: "assistant", content: data.reply });
                showLoading(false);

                if (data.products && data.products.length > 0) {
                    let productHtml = `
                        <div class="product-carousel-container">
                            <button class="carousel-nav prev">❮</button>
                            <div class="product-carousel">
                                <div class="product-track">
                                    ${data.products.map(p => `
                                        <div class="product-card">
                                            <a href="${p.DetayUrl}" target="_blank" title="${p.Adi}">
                                                <div class="product-image" style="background-image: url('${p.Resim || ''}')"></div>
                                                <div class="product-info">
                                                    <strong>${p.Adi}</strong>
                                                    <span>${p.Fiyat} ₺</span>
                                                </div>
                                            </a>
                                        </div>
                                    `).join("")}
                                </div>
                            </div>
                            <button class="carousel-nav next">❯</button>
                        </div>`;
                    appendMessage("Kai", `${data.reply}<br/>${productHtml}`);

                    setTimeout(() => {
                        const lastMsg = messages.lastElementChild;
                        if (!lastMsg) return;
                        const carousel = lastMsg.querySelector(".product-carousel");
                        const nextBtn = lastMsg.querySelector(".carousel-nav.next");
                        const prevBtn = lastMsg.querySelector(".carousel-nav.prev");
                        if (carousel && nextBtn && prevBtn) {
                            nextBtn.onclick = () => carousel.scrollBy({ left: 160, behavior: 'smooth' });
                            prevBtn.onclick = () => carousel.scrollBy({ left: -160, behavior: 'smooth' });
                        }
                    }, 100);
                } else {
                    appendMessage("Kai", data.reply);
                }
            } catch (error) {
                showLoading(false);
                appendMessage("Kai", "Bir hata oluştu, lütfen tekrar deneyin.");
                console.error("API İsteği Hatası:", error);
                bubbleChatHistory.pop();
            }
        }

        input.addEventListener("keypress", (e) => {
            if (e.key === "Enter" && !e.shiftKey) { e.preventDefault(); sendMessage(); }
        });
        sendBtn.addEventListener("click", sendMessage);
    });
</script>

