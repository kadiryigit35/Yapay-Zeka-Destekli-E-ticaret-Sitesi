@model IEnumerable<eTicaretSitesi.MvcWebUI.Entity.kategori>

@{
    int? secilenKategori = null;
    var kategoriIdStr = Request.QueryString["kategoriId"];
    if (int.TryParse(kategoriIdStr, out int kId))
    {
        secilenKategori = kId;
    }

    string minFiyat = Request.QueryString["min"];
    string maxFiyat = Request.QueryString["max"];
}

<div class="card shadow-sm rounded-3 mb-4">
    <div class="card-header bg-primary text-white">
        <i class="fa fa-list"></i> Kategoriler
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item @(secilenKategori == null ? "active bg-primary font-weight-bold" : "")">
            <a class="text-decoration-none d-block" href="@Url.Action("UrunListesi", "Home")">
                <i class="fa fa-angle-double-right"></i> Tüm Ürünler
            </a>
        </li>

        @foreach (var item in Model)
        {
            <li class="list-group-item @(secilenKategori == item.Id ? "active bg-primary font-weight-bold" : "")">
                <a class="text-decoration-none d-block"
                   href="@Url.Action("UrunListesi", "Home", new { kategoriId = item.Id, min = minFiyat, max = maxFiyat })">
                    <i class="fa fa-angle-double-right"></i> @item.Adi
                </a>
            </li>
        }
    </ul>
</div>

<!-- Fiyat Filtreleme Paneli -->
<div class="card shadow-sm rounded-3">
    <div class="card-header bg-secondary text-white">
        <i class="fa fa-filter"></i> Fiyat Filtresi
    </div>
    <div class="card-body">
        <form method="get" action="@Url.Action("UrunListesi", "Home")">
            @if (secilenKategori.HasValue)
            {
                <input type="hidden" name="kategoriId" value="@secilenKategori" />
            }

            <div class="form-group">
                <label for="min">Min Fiyat</label>
                <input type="number" name="min" id="min" class="form-control" value="@minFiyat" placeholder="Örn: 100" min="0" />
            </div>

            <div class="form-group">
                <label for="max">Max Fiyat</label>
                <input type="number" name="max" id="max" class="form-control" value="@maxFiyat" placeholder="Örn: 1000" min="0" />
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-3">
                <i class="fa fa-search"></i> Uygula
            </button>
        </form>
    </div>
</div>
