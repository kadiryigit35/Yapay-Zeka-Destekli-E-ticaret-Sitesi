@model List<eTicaretSitesi.MvcWebUI.Entity.kayitliAdres>
@{
    ViewBag.Title = "Kayýtlý Adreslerim";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Kayýtlý Adreslerim</h2>

    <div class="text-end mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addAdresModal">
            <i class="fa fa-plus"></i> Yeni Adres Ekle
        </button>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Henüz kayýtlý adresiniz yok.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Adres Baþlýðý</th>
                                <th>Adres</th>
                                <th>Þehir</th>
                                <th>Telefon</th>
                                <th>Tam Ad</th>
                                <th class="text-center">Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var adres in Model)
                            {
                                <tr>
                                    <td>@adres.AdresBasligi</td>
                                    <td>@adres.Adres, @adres.Mahalle, @adres.Sokak</td>
                                    <td>@adres.Sehir</td>
                                    <td>@adres.Telefon</td>
                                    <td>@adres.TamAd</td>
                                    <td class="text-center">
                                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editAdresModal" data-id="@adres.Id" data-tamad="@adres.TamAd" data-adresbasligi="@adres.AdresBasligi" data-adres="@adres.Adres" data-sehir="@adres.Sehir" data-mahalle="@adres.Mahalle" data-sokak="@adres.Sokak" data-postakodu="@adres.PostaKodu" data-telefon="@adres.Telefon">Düzenle</button>
                                        <form action="@Url.Action("DeleteAdres", "hesap")" method="post" style="display:inline;" onsubmit="return confirm('Bu adresi silmek istediðinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@adres.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="addAdresModal" tabindex="-1" aria-labelledby="addAdresModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAdresModalLabel">Yeni Adres Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddAdres", "hesap", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Adý Soyadý</label>
                        <input type="text" class="form-control" name="TamAd" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adres Baþlýðý</label>
                        <input type="text" class="form-control" name="AdresBasligi" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adres</label>
                        <input type="text" class="form-control" name="Adres" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Þehir</label>
                            <input type="text" class="form-control" name="Sehir" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mahalle</label>
                            <input type="text" class="form-control" name="Mahalle" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sokak</label>
                            <input type="text" class="form-control" name="Sokak" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Telefon</label>
                        <input type="tel" class="form-control" name="Telefon" required />
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ýptal</button>
                }
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editAdresModal" tabindex="-1" aria-labelledby="editAdresModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAdresModalLabel">Adresi Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditAdres", "hesap", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" id="editAdresId" />
                    <div class="mb-3">
                        <label for="editTamAd" class="form-label">Adý Soyadý</label>
                        <input type="text" class="form-control" id="editTamAd" name="TamAd" required />
                    </div>
                    <div class="mb-3">
                        <label for="editAdresBasligi" class="form-label">Adres Baþlýðý</label>
                        <input type="text" class="form-control" id="editAdresBasligi" name="AdresBasligi" required />
                    </div>
                    <div class="mb-3">
                        <label for="editAdres" class="form-label">Adres</label>
                        <input type="text" class="form-control" id="editAdres" name="Adres" required />
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="editSehir" class="form-label">Þehir</label>
                            <input type="text" class="form-control" id="editSehir" name="Sehir" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="editMahalle" class="form-label">Mahalle</label>
                            <input type="text" class="form-control" id="editMahalle" name="Mahalle" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="editSokak" class="form-label">Sokak</label>
                            <input type="text" class="form-control" id="editSokak" name="Sokak" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editTelefon" class="form-label">Telefon</label>
                            <input type="tel" class="form-control" id="editTelefon" name="Telefon" required />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ýptal</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var editModal = document.getElementById('editAdresModal');
            editModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                var tamAd = button.getAttribute('data-tamad');
                var adresBasligi = button.getAttribute('data-adresbasligi');
                var adres = button.getAttribute('data-adres');
                var sehir = button.getAttribute('data-sehir');
                var mahalle = button.getAttribute('data-mahalle');
                var sokak = button.getAttribute('data-sokak');
                var postaKodu = button.getAttribute('data-postakodu');
                var telefon = button.getAttribute('data-telefon');

                document.getElementById('editAdresId').value = id;
                document.getElementById('editTamAd').value = tamAd;
                document.getElementById('editAdresBasligi').value = adresBasligi;
                document.getElementById('editAdres').value = adres;
                document.getElementById('editSehir').value = sehir;
                document.getElementById('editMahalle').value = mahalle;
                document.getElementById('editSokak').value = sokak;
                document.getElementById('editPostaKodu').value = postaKodu;
                document.getElementById('editTelefon').value = telefon;
            });
        });
    </script>
}